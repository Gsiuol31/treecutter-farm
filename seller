while true do
  turtle.suck()
  if turtle.getItemDetail(2) = "minecraft : diamond" then
    turtle.select ( 1 )
    turtle.drop()
    turtle.turnLeft()
    turtle.select ( 2 )
    turtle.drop()
    turtle.turnRight()
  end
end
